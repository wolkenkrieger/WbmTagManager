<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	
    <parameters>
        <parameter key="itswcar.services.class">ItswCar\Components\Services\Services</parameter>
		<parameter key="itswcar.category_service.class">ItswCar\Components\Services\CategoryService</parameter>
		<parameter key="itswcar.customer_group_condition_handler.class">ItswCar\SearchBundleDBAL\Condition\CustomerGroupConditionHandler</parameter>
    </parameters>

    <services>
        <service id="itswcar.services" class="%itswcar.services.class%" public="true">
            <argument type="service" id="service_container" />
			<argument type="service" id="models" />
        </service>
		
		<service id="shopware_storefront.category_service_decorator"
				 class="%itswcar.category_service.class%"
				 decorates="shopware_storefront.category_service"
				 public="false">
			<argument type="service" id="shopware_storefront.category_service_decorator.inner"/>
			<argument type="service" id="itswcar.services"/>
		</service>
		
		<service id="itsw.customer_group_condition_handler_dbal"
				 decorates="shopware_searchdbal.customer_group_condition_handler_dbal"
				 class="%itswcar.customer_group_condition_handler.class%">
			<tag name="condition_handler_dbal" />
		</service>
    </services>
</container>