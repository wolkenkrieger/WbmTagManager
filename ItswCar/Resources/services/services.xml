<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	
    <parameters>
        <parameter key="itswcar.services.class">ItswCar\Components\Services\Services</parameter>
		<parameter key="itswcar.category_service.class">ItswCar\Components\Services\CategoryService</parameter>
		<parameter key="itswcar.customer_group_condition_handler.class">ItswCar\SearchBundleDBAL\Condition\CustomerGroupConditionHandler</parameter>
		<parameter key="itswcar.sitemap_writer_service.class">ItswCar\SitemapBundle\Service\SitemapWriter</parameter>
		<parameter key="itswcar.sitemap_name_generator_service.class">ItswCar\SitemapBundle\Service\SitemapNameGenerator</parameter>
		<parameter key="itswcar.car_url_provider.class">ItswCar\SitemapBundle\Provider\ItswCarUrlProvider</parameter>
    </parameters>

    <services>
        <service id="itswcar.services" class="%itswcar.services.class%" public="true">
            <argument type="service" id="service_container" />
			<argument type="service" id="models" />
        </service>
		
		<service id="shopware_storefront.category_service_decorator"
				 class="%itswcar.category_service.class%"
				 decorates="shopware_storefront.category_service"
				 public="false">
			<argument type="service" id="shopware_storefront.category_service_decorator.inner"/>
			<argument type="service" id="itswcar.services"/>
		</service>
		
		<service id="itswcar.customer_group_condition_handler_dbal"
				 decorates="shopware_searchdbal.customer_group_condition_handler_dbal"
				 class="%itswcar.customer_group_condition_handler.class%">
			<tag name="condition_handler_dbal" />
		</service>
	
		<service id="itswcar.service.sitemap_writer"
				 class="%itswcar.sitemap_writer_service.class%"
				 decorates="shopware_bundle_sitemap.service.sitemap_writer"
				 public="false">
			<argument type="service" id="itswcar.service.sitemap_name_generator"/>
			<argument type="service" id="Shopware\Components\Filesystem\PrefixFilesystem"/>
			<argument type="service" id="corelogger"/>
		</service>
		
		<service id="itswcar.service.sitemap_name_generator"
				 class="%itswcar.sitemap_name_generator_service.class%" >
			<argument type="service" id="Shopware\Components\Filesystem\PrefixFilesystem"/>
		</service>
	
		<service id="itswcar.provider.car_url_provider" class="%itswcar.car_url_provider.class%"
				 public="false">
			<argument type="service" id="Shopware\Components\Model\ModelManager"/>
			<argument type="service" id="itsw.helper.seo"/>
			<argument>%shopware.sitemap.batchsize%</argument>
			
			<tag name="sitemap_url_provider" />
		</service>
		
		
		<service id="itswcar.service.debug_logger" class="Shopware\Components\Logger" public="true">
			<argument>itsw_car_debug</argument>
			<call method="pushHandler">
				<argument type="service" id="itswcar.monolog.handler.rotating_file.debug" />
			</call>
		</service>
	
		<service id="itswcar.service.error_logger" class="Shopware\Components\Logger" public="true">
			<argument>itsw_car_error</argument>
			<call method="pushHandler">
				<argument type="service" id="itswcar.monolog.handler.rotating_file.warning" />
			</call>
		</service>
	
		<service id="itswcar.monolog.handler.rotating_file.debug" class="Monolog\Handler\RotatingFileHandler" public="false">
			<argument>%kernel.logs_dir%/itsw_car_debug.log</argument>
			<argument>14</argument>
			<call method="pushProcessor">
				<argument type="service" id="monolog.processor.uid"/>
			</call>
		</service>
	
		<service id="itswcar.monolog.handler.rotating_file.warning" class="Monolog\Handler\RotatingFileHandler" public="false">
			<argument>%kernel.logs_dir%/itsw_car_error.log</argument>
			<argument>14</argument>
			<call method="pushProcessor">
				<argument type="service" id="monolog.processor.uid"/>
			</call>
		</service>
    </services>
</container>