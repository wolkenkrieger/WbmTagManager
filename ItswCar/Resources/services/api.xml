<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	
	<parameters>
		<parameter key="itswcar.api.extendedarticles.class">ItswCar\Controllers\Api\Shopware_Controllers_Api_ExtendedArticles</parameter>
	</parameters>
	
	<services>
		<defaults public="true"/>
		
		<service id="itswcar.resource.extendedarticle" class="ItswCar\Components\Api\Resource\ExtendedArticle">
			<tag name="shopware.api_resource"/>
		</service>
		
        <service id="itswcar.api.extendedarticles" class="%itswcar.api.extendedarticles.class%">
			<argument type="service" id="itswcar.resource.extendedarticle"/>
        </service>
    </services>
</container>