<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	
    <parameters>
        <parameter key="itswcar.commands.categories_importer_class">ItswCar\Commands\CategoriesImporterCommand</parameter>
		<parameter key="itswcar.commands.articles_importer_class">ItswCar\Commands\ArticlesImporterCommand</parameter>
		<parameter key="itswcar.commands.cars_importer_class">ItswCar\Commands\EbayCarsImporterCommand</parameter>
		<parameter key="itswcar.commands.links_importer_class">ItswCar\Commands\ArticleCarLinksImporterCommand</parameter>
		<parameter key="itswcar.commands.rebuild_seo_index_class">ItswCar\Commands\RebuildSeoIndexCommand</parameter>
    </parameters>
	
	<services>
		<service id="itswcar.commands.categories_importer_command"
				 class="%itswcar.commands.categories_importer_class%">
			<argument type="service" id="itswcar.services" />
			<tag name="console.command" command="itsw:importer:categories" />
		</service>
		
		<service id="itswcar.commands.articles_importer_command"
				 class="%itswcar.commands.articles_importer_class%">
			<argument type="service" id="itswcar.services" />
			<tag name="console.command" command="itsw:importer:articles" />
		</service>
		
		<service id="itswcar.commands.cars_importer_command"
				 class="%itswcar.commands.cars_importer_class%">
			<argument type="service" id="itswcar.services" />
			<tag name="console.command" command="itsw:importer:cars" />
		</service>
		
		<service id="itswcar.commands.links_importer_command"
				 class="%itswcar.commands.links_importer_class%">
			<argument type="service" id="itswcar.services" />
			<tag name="console.command" command="itsw:importer:links" />
		</service>
		
		<service id="itswcar.commands.rebuild_seo_index_command"
				 class="%itswcar.commands.rebuild_seo_index_class%">
			<tag name="console.command" command="itsw:seo:index:rebuild" />
		</service>
	</services>
</container>